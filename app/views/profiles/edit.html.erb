<section class="profile profile__edit template--pad">
	<div class="template--wrapper box-shadow">
		<div class="profile__header row">
			<h2>Edit your Profile</h2>
			<% if current_user.profile == nil %>
				<p>Looks like you're new here!  Get started by setting up your profile..</p>
			<% end %>
		</div>
		<div class="form__container row">
			<%= render 'profileForm' %>
		</div>
	</div>
	<% if current_user.profile.id.present? %>
		<div class="profile__links row">
			<% if current_user.provider != "twitter" %>
				<%= link_to "Change password", edit_user_registration_path %>
			<% else %>
				<%= link_to "Update email", edit_user_registration_path %>
			<% end %>
			<%= link_to "Cancel", profile_path  %>
		</div>
	<% end %>
</section>